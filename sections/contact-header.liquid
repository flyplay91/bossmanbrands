<div class="top-banner page-heading contact-hero" style="background-image: url('{{ section.settings.image | img_url: '1500x'}}');">
</div>
<div class="custom-container">
		<div class="custom-wrapper contact-us">
			<h1 class="contact-us__title">{{ section.settings.title }}</h1>
			<p class="contact-us__post-title">{{ section.settings.post_title }}</p>
			<a href="{{ section.settings.link_url }}" class="link contact-us__explore">{{ section.settings.link_title }}</a>
		</div>
	</div>


{% schema %}
  {
    "name": "Hero",                     
    "settings": [

      {
        "type": "image_picker",
        "id": "image",
        "label": "Hero Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Page Title",
		"default": "Contact Us"
      },
      {
        "type": "text",
        "id": "post_title",
        "label": "Small Title",
		"default": "Have a question about products, shipping or returns?"
      },
	  {
		"id": "link_title",
		"type": "text",
		"label": "Link Text"
	  },
	  {
		"id": "link_url",
		"type": "url",
		"label": "Link Url"
      }

	]
  }
{% endschema %}


