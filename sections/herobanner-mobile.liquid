{% for block in section.blocks %}
 <a href="/products/beard-pomade" style="height:100%;">
<div class="home herobanner mobile" style="background-image: url({{block.settings.background_img | img_url: '800x'}});">
<span class="subtitle" style="display:none;">{{block.settings.sub_title}}</span>
<h1 style="display:none;">{{block.settings.heading}}</h1>
<a style="display:none;" href="{{block.settings.button_url}}" class="btn" title="{{block.settings.button_text}}">{{block.settings.button_text}}</a>
</div>
</a>
{% endfor %}

{% schema %}
{
	"name": "Mobile Hero",
	"class": "hero",
	"blocks": [
		{
			"type": "quality",
			"name": "Hero Mobile Banner",
			"settings": [
				{
		            "type": "image_picker",
		            "id": "background_img",
		            "label": "Background Image"
				},
		        {
		            "type": "text",
		            "id": "sub_title",
		            "label": "Sub Title"
				},
				{
		            "type": "text",
		            "id": "heading",
		            "label": "Main Heading"
		        },
				{
					"type": "text",
					"id": "button_text",
					"label": "Button Text"
				},
				{
                    "type": "url",
                    "id": "button_url",
                    "label": "Button Url"
				}
			]
		}
	],
	"presets": [
        {
            "name": "Homepage Hero Desktop",
            "category": "Banner"
        }
    ]
}
{% endschema %}