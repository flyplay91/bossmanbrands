{% for block in section.blocks %}
{% comment %}
<div class="home herobanner desktop" style="background-image: url({{block.settings.background_img | img_url: '3000x'}});">
{% endcomment %}
<div class="home herobanner desktop" style="position: relative;">
  <a href="/products/beard-pomade">
	
	<video width="100%" height="100%" muted autoplay poster="https://cdn.shopify.com/s/files/1/2283/7011/files/boat-desktop.png?v=1597785147">
	  	<source src="https://cdn.shopify.com/s/files/1/2283/7011/files/Boat1080x608_6aca9634-dcb6-443d-a598-755ee2a85a4e.mp4?v=1598879420" type="video/mp4">
  		{%comment%}<source src="" type="video/ogg" />{%endcomment%}
	</video>	
	
	
	<div class="content" style="display:none;">
		<span class="subtitle">{{block.settings.sub_title}}</span>
		<h1>{{block.settings.heading}}</h1>
		<a href="{{block.settings.button_url}}" class="btn" title="{{block.settings.button_text}}">{{block.settings.button_text}}</a>
	</div>
  </a>
</div>
{% endfor %}


{% schema %}
{
	"name": "Desktop Hero",
	"class": "hero",
	"blocks": [
		{
			"type": "quality",
			"name": "Hero Banner",
			"settings": [
				{
		            "type": "image_picker",
		            "id": "background_img",
		            "label": "Background Image"
				},
		        {
		            "type": "text",
		            "id": "sub_title",
		            "label": "Sub Title"
				},
				{
		            "type": "text",
		            "id": "heading",
		            "label": "Main Heading"
		        },
				{
					"type": "text",
					"id": "button_text",
					"label": "Button Text"
				},
				{
                    "type": "url",
                    "id": "button_url",
                    "label": "Button Url"
				}
			]
		}
	],
	"presets": [
        {
            "name": "Homepage Hero Desktop",
            "category": "Banner"
        }
    ]
}
{% endschema %}