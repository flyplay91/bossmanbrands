{% for block in section.blocks %}
<div class="home herobanner desktop lazyload" data-bg="{{block.settings.background_img | img_url: '1440x'}}" style="background-image: url({{block.settings.background_img | img_url: '1440x'}});">
<span class="subtitle">{{block.settings.sub_title}}</span>
<h1>{{block.settings.heading}}</h1>
<a data-fancybox href="{{block.settings.button_url}}" class="btn" title="{{block.settings.button_text}}">{{block.settings.button_text}}</a>



</div>
{% endfor %}

{% schema %}
{
	"name": "Watch Video",
	"class": "hero",
	"blocks": [
		{
			"type": "quality",
			"name": "Hero Banner",
			"settings": [
				{
		            "type": "image_picker",
		            "id": "background_img",
		            "label": "Background Image"
				},
		        {
		            "type": "text",
		            "id": "sub_title",
		            "label": "Sub Title"
				},
				{
		            "type": "text",
		            "id": "heading",
		            "label": "Main Heading"
		        },
				{
					"type": "text",
					"id": "button_text",
					"label": "Button Text"
				},
				{
                    "type": "url",
                    "id": "button_url",
                    "label": "Button Url"
				}
			]
		}
	],
	"presets": [
        {
            "name": "Homepage Hero Desktop",
            "category": "Banner"
        }
    ]
}
{% endschema %}