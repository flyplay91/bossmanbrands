<section class="atc-banner--container" data-atc-banner="" data-flyout-active="true" tabindex="-1">
  <div class="atc-banner--outer">
    <div class="atc-banner--inner">
      
      <div class="atc-banner--top">
        <span>My Shopping Cart</span>
        <button class="atc-banner--close" type="button" aria-label="Close" data-atc-banner-close="">
          <svg aria-hidden="true" focusable="false" role="presentation" xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 13 13">
            <path fill="currentColor" fill-rule="evenodd" d="M5.306 6.5L0 1.194 1.194 0 6.5 5.306 11.806 0 13 1.194 7.694 6.5 13 11.806 11.806 13 6.5 7.694 1.194 13 0 11.806 5.306 6.5z"></path>
          </svg>
        </button>
      </div>
      
      <div class="atc-banner--product">
        {% comment %}
        <h2 class="atc-banner--product-title">
          <span class="atc-banner--product-title--icon"><svg aria-hidden="true" focusable="false" role="presentation" width="18" height="13" viewBox="0 0 18 13" xmlns="http://www.w3.org/2000/svg">
  			<path fill="currentColor" fill-rule="evenodd" d="M6.23 9.1L2.078 5.2 0 7.15 6.23 13 18 1.95 15.923 0z"></path>
			</svg></span>
          Added to your cart:
        </h2>
        {% endcomment %}
        
        <div class="unlock-free-bar">
          <label></label>
          <div class="stat-bar">
            <span class="stat-bar-rating">80%</span>
          </div>
        </div>
		
        <div class="side-cart-block"></div>
        
      </div>

      <div class="atc-banner--cart">
        <div class="atc-banner--cart-subtotal">
          <span class="atc-subtotal--label">
            Subtotal
          </span>
          <span class="atc-subtotal--price money" data-atc-banner-cart-subtotal="">$00.00</span>
        </div>

        <footer class="atc-banner--cart-footer">
          <a class="button-secondary atc-button--viewcart" href="/cart" data-atc-banner-cart-button="">
            View cart (<span>0</span>)
          </a>
          
          <a class="button-primary atc-button--checkout normal-checkout" href="/checkout">
            Checkout
          </a>
          
          <a class="button-primary atc-button--checkout recharge-checkout" href="/cart">
            Checkout
          </a>
        </footer>
      </div>
    </div>

    
  </div>
</section>
